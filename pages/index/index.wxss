page {
  background-color: #fff;
}

.leftBar {
  width: 100px;
  margin-left: 10rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16px;
  /* border: 1rpx solid rgba(204, 204, 204, 0.6); */
  background-color: rgb(245, 245, 245);
  position: relative;
  font-size: 16px;
  color: rgb(128, 128, 128);
  /* color: #1485EE; */
  padding: 0;
  font-weight: 300
}

.intro {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: 0 10px 10px 10px;
  margin-top: 8rpx;
  text-align: center;
}

/* .scene {
  display: flex;
  flex-direction: column;
} */

.tip {
  /* display: flex; */
  top: unset;
  bottom: 100px;
  margin: 0 24rpx;
  border-radius: 8rpx;
  background-color: #FFEDB2 !important;
  color: #EA7800;
}

.scene-template {
  /* height: 100%; */
  height: 1500rpx;
  /* height: 760px; */
  /* flex: 1; */
}

.we {
  height: 80%;
  display: flex;
  flex-direction: row;
}

.scene-template-km {
  flex-basis: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgb(214, 222, 245);
}

.weui-input-cj {
  height: 100%;
  flex-grow: 1;
  background-color: aliceblue;
}

.weui-input-xf {
  height: 100%;
  flex-grow: 1;
  /* background-color: rgb(243, 252, 252); */
}

.btn-area {
  box-sizing: border-box;
  width: 713rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
  /* background-color: white; */
  /* 适配全面屏 */
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  page {
    background-color: #1b1b1b;
  }

  .leftBar {
    background-color: rgb(32, 32, 32);
    color: rgb(128, 128, 128);
  }

  .scene-template-km {
    background-color: rgb(41, 47, 58);
  }

  .weui-input-cj {
    background-color: rgb(30, 32, 34);
  }

  /* DarkMode 下的样式 end */
}